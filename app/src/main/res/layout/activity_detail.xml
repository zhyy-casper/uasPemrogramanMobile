<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".detail">


    <!-- Judul Halaman -->
    <TextView
    android:id="@+id/tvTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:text="Kalkulator"
    android:textColor="@color/white"
    android:textSize="32sp"
    android:textStyle="bold"
    android:fontFamily="sans-serif-medium"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.498"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <!-- Tampilan Angka -->
    <TextView
    android:id="@+id/tvDisplay"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="0"
    android:textSize="48sp"
    android:gravity="end"
    android:textColor="@color/white"
    android:padding="16dp"
    android:background="@drawable/rounded_background"
    app:layout_constraintTop_toBottomOf="@id/tvTitle"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_margin="16dp" />

    <!-- Tombol Angka dan Operasi -->
<GridLayout
android:id="@+id/gridLayoutNumbers"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_marginTop="12dp"
android:columnCount="4"
android:rowCount="5"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@id/tvDisplay">

<!-- Tombol Angka -->
<Button
    android:id="@+id/btn7"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="@color/dark_blue"
    android:text="7"
    android:textColor="@color/white"
    android:textSize="24sp"
    android:layout_gravity="center"
    android:elevation="4dp"
    android:stateListAnimator="@animator/button_state_animator" />

<!-- Tombol Angka Lainnya -->
<Button
    android:id="@+id/btn8"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="@color/dark_blue"
    android:text="8"
    android:textColor="@color/white"
    android:textSize="24sp"
    android:layout_gravity="center"
    android:elevation="4dp"
    android:stateListAnimator="@animator/button_state_animator" />

<!-- Tombol Operasi -->
<Button
    android:id="@+id/btnDivide"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="@color/material_dynamic_secondary0"
    android:text="รท"
    android:textColor="@color/white"
    android:textSize="24sp"
    android:layout_gravity="center"
    android:elevation="4dp"
    android:stateListAnimator="@animator/button_state_animator" />

    <!-- Tombol lainnya di sini dengan styling serupa -->
    </GridLayout>

    <!-- Gambar Logo -->
    <ImageView
    android:id="@+id/imageView2"
    android:layout_width="165dp"
    android:layout_height="124dp"
    android:layout_marginTop="48dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/logo" />
    </androidx.constraintlayout.widget.ConstraintLayout>
